name: Staging Build and Deploy
# This workflow is triggered on a push to the development branch
on:
  push:
    branches:
      - development

# Set Permissions
permissions:
  contents: write

# Configure Jobs
jobs:
  build:
  #  concurrency: ci-${{ github.ref }} # Recommended if you intend to make multiple deployments in quick succession.
    runs-on: ubuntu-latest
    steps:

# Checkout
      - name: Checkout Code ğŸ›ï¸
        uses: actions/checkout@v4

# Setup Node.js
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
          registry-url: https://npm.pkg.github.com/

# Install Dependencies and Build App 
      - name: Build Angular App ğŸ”§ # Successful
    #    working-directory: angular-starter/browser
        run: |
          npm ci
          npm run build --configuration=development

      - name: Deploy to GitHub Pages ğŸš€
        uses: JamesIves/github-pages-deploy-action@v4
        with:
          folder: dist/angular-supastarter/browser # The folder the action should deploy.
